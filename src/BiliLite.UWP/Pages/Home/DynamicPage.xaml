                <toolkit:AdaptiveGridView.Footer>
                    <StackPanel>
                        <HyperlinkButton  Command="{x:Bind Path=dynamicVM.LoadMoreCommand}" Visibility="{x:Bind Path=dynamicVM.Loading,Mode=OneWay,Converter={StaticResource display}}" Foreground="Gray" HorizontalAlignment="Center" x:Name="btnLoadMore">
